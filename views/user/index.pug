extends ../layouts/common.pug

block content
    h1 
      span.mr-3 User 
      a.btn.btn-primary(href="/user/create") Create New
    .d-flex.align-items-center     
      form.ml-auto.d-flex(action="/user/search", method="GET")
          input.form-control(type='text', placeholder='Search', aria-label='Search' name='q')
          button.btn.btn-primary.ml-2(type='submit') Search
    table.table
        tr
         th Avata
         th Email
         th Name
         th Phone
         th Action
        each user in users
         tr
          td
            img(src=user.avata, width="30") 
          td= user.email
          td= user.name
          td= user.phone
          td
            a.btn.btn-light(href="/user/view/" + user.id) view 