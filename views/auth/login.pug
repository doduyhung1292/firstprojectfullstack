extends ../layouts/common.pug
block content

    h1 Login

    if errors
     each error in errors
      .alert.alert-danger= error

    form( method="POST")
     .form-group
      label(for="email") Email:
      input#email.form-control(type="text", placeholder="email", name="email", value=values ? values.email : "")
     .form-group
      label(for="password") Password:
      input#Password.form-control(type="number", placeholder="password", name="password", value=values ? values.password : "")


      button.btn.btn-primary Login