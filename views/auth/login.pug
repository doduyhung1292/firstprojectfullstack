extends ../layouts/common.pug
block content

    h1 Login

    if errors
     each error in errors
      .alert.alert-danger= error

    form(action="/user/create", method="POST")
     .form-group
      label(for="email") Email:
      input#email.form-control(type="text", placeholder="name", name="name", value=values ? values.email : "")
     .form-group
      label(for="Password") Password:
      input#Password.form-control(type="number", placeholder="Password", name="Password", value=values ? values.Password : "")


      button.btn.btn-primary Login